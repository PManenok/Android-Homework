<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/hw7userPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/hw7_user_pic" />


    <TextView
        android:id="@+id/hw7userName"
        style="@style/UserDataTextStyleHW7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/hw7userPic"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/hw7userPic"
        android:layout_toRightOf="@id/hw7userPic" />

    <TextView
        android:id="@+id/hw7userSurname"
        style="@style/UserDataTextStyleHW7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/hw7userName"
        android:layout_alignLeft="@id/hw7userName"
        android:layout_alignBottom="@id/hw7userPic"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp" />

</RelativeLayout>