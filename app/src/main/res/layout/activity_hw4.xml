<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hw4ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/owl_blinking" />

    <EditText
        android:id="@+id/hw4EnterNums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hw4_enter"
        android:paddingStart="20dp"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/hw4btnDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hw4_draw" />

    <by.itacademy.palina.task.home.hw4.PieDiagram
        android:id="@+id/hw4Pie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>